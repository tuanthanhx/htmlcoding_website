doctype html

block vars

-
  var siteName = 'HTMLCODING';
  var domain= 'https://htmlcoding.net';
  var generateOgUrl = () => {
    return new URL(filepath, domain + '/').href;
  }
  var generateOgImage = () => {
    const img = imgOG || './img/common/og.jpg';
    const fullImageUrl = new URL(img, domain + '/').href;
    return fullImageUrl;
  }

include ../_mixins/all

